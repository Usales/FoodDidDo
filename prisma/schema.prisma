model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String?
  cpfCnpj   String? // CPF ou CNPJ para emissão de nota fiscal
  phone     String?
  address   String?
  city      String?
  state     String? // UF (ex: SP, RJ)
  zipCode   String? // CEP
  notes     String? // Observações sobre o cliente
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]

  @@index([email])
  @@index([cpfCnpj])
}

model Order {
  id          String   @id @default(uuid())
  customerId  String? // Cliente pode ser opcional (venda avulsa)
  orderNumber String? // Número do pedido (ex: PED-001)
  status      String   @default("pending") // 'pending', 'confirmed', 'preparing', 'ready', 'delivered', 'cancelled'
  total       Float
  subtotal    Float // Total antes de taxas/descontos
  discount    Float    @default(0)
  tax         Float    @default(0) // Impostos
  deliveryFee Float    @default(0) // Taxa de entrega
  notes       String? // Observações do pedido
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  customer Customer?   @relation(fields: [customerId], references: [id], onDelete: SetNull)
  items    OrderItem[]
  payment  Payment?
  invoice  Invoice?

  @@index([customerId])
  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id         String   @id @default(uuid())
  orderId    String
  recipeId   String? // Pode estar relacionado a uma receita
  recipeName String? // Nome do produto/receita (para histórico)
  name       String // Nome do item
  quantity   Float
  unitPrice  Float
  totalPrice Float // quantity * unitPrice
  notes      String? // Observações do item
  createdAt  DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

