model Invoice {
  id                 String    @id @default(uuid())
  orderId            String    @unique // Um pedido tem uma nota fiscal
  type               String // 'NFe' (Nota Fiscal Eletrônica) ou 'NFCe' (Nota Fiscal de Consumidor Eletrônica)
  number             String? // Número da nota fiscal
  series             String? // Série da nota fiscal
  accessKey          String? // Chave de acesso (44 dígitos)
  status             String    @default("pending") // 'pending', 'issued', 'cancelled', 'error'
  provider           String? // 'focus', 'bling', 'tecnospeed', 'direct'
  providerId         String? // ID da nota no provedor
  xml                String? // XML da nota fiscal (armazenado como texto)
  xmlUrl             String? // URL do XML (se armazenado externamente)
  pdfUrl             String? // URL do PDF da nota fiscal
  pdfBase64          String? // PDF em base64 (alternativa)
  cancellationReason String? // Motivo do cancelamento
  cancelledAt        DateTime? // Data do cancelamento
  issuedAt           DateTime? // Data de emissão
  errorMessage       String? // Mensagem de erro (se status = 'error')
  metadata           String? // JSON com dados adicionais do provedor
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([accessKey])
  @@index([number])
  @@index([status])
  @@index([createdAt])
}
