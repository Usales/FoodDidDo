model Payment {
  id             String    @id @default(uuid())
  orderId        String    @unique // Um pedido tem um pagamento
  amount         Float
  method         String // 'pix', 'credit_card', 'debit_card', 'boleto', 'cash', 'other'
  status         String    @default("pending") // 'pending', 'processing', 'paid', 'failed', 'refunded', 'cancelled'
  provider       String? // 'mercadopago', 'pagseguro', 'asaas', 'manual'
  providerId     String? // ID da transação no gateway de pagamento
  qrCode         String? // QR Code para PIX (base64 ou URL)
  qrCodeText     String? // Texto do QR Code PIX
  barcode        String? // Código de barras para boleto
  barcodeUrl     String? // URL do código de barras
  pixCopyPaste   String? // Código PIX para copiar e colar
  expirationDate DateTime? // Data de expiração (para PIX/boleto)
  paidAt         DateTime? // Data/hora do pagamento confirmado
  failureReason  String? // Motivo da falha (se status = 'failed')
  metadata       String? // JSON com dados adicionais do gateway
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([providerId])
  @@index([createdAt])
}

